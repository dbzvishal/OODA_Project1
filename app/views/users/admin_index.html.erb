<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Uname</th>
    <th>Uemail</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.uname %></td>
        <td><%= user.uemail %></td>
        <td><%= link_to 'Show Booking History', show_booking_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% unless user.id = session[:user_id] || @super_admin = true %>
          <td><%= link_to 'Destroy', users_admin_index_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

