<%= stylesheet_link_tag 'bookings/tables' %>

<% unless @booking.empty? %>
  <h3>Booking History for User: <%= @user_name %></h3>
  <p id="notice"><%= notice %></p>
  <table style='text-align:center;vertical-align:middle'>
    <tr style='font-size: 25px;font-weight: bold;background-color: #333333;color:#FFFFFF;font-weight: bold;'>
      <th></th>
      <th>Room</th>
      <th>Building</th>
      <th>Date of Booking</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
    <% i=0
      @booking.each do |booking|
      if(booking.timeto > @currentZone.at(Time.now))
      i = i + 1
      room = booking.room
    %>
      <tr style="background-color:#F7F7F7">
        <td><%= i %></td>
        <td><%= room.rnumber %></td>
        <td><%= room.building.bname %></td>
        <td><%= booking.timefrom.strftime("%d-%b-%y") %></td>
        <td><%= booking.timefrom.strftime("%I:%M %p") %></td>
        <td><%= booking.timeto.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Delete', bookings_destroy_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
    <%end%>
  </table>
<% else %>
    <i>No Booking History found for user</i>
<% end %>
<br />
<br />
<%= link_to 'New Booking', add_booking_path %><br /><br />
<%= link_to 'Back to Dashboard', options_path%>