<%= stylesheet_link_tag 'bookings/tables' %>
<%if flash[:notice]%>
    <p id="notice"><%= flash[:notice] %></p>
<%end%>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Timefrom</th>
      <th>Timeto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <%unless booking.user.nil? %>
          <td><%= booking.user.uname %></td>
        <%else%>
          <td><%=  %></td>
        <%end%>
        <td><%= booking.timefrom %></td>
        <td><%= booking.timeto %></td>
        <td><%= link_to 'Show', show_booking_path(booking) %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Delete', bookings_destroy_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', add_booking_path %>
