<%= form_for user, :url => {:action => action} do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <table>
      <tr>
        <td><%= f.label :Username %></td>
        <td><%= f.text_field :uname %></td>
      </tr>

      <tr>
        <td><%= f.label :Email %></td>
        <td><%= f.email_field :uemail %></td>
      </tr>

      <tr>
        <td><%= f.label :Password %></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <% if (@admin) %>
      <tr>
        <td><%= f.radio_button(:utype, "admin") %></td>
        <td><%= f.label :Admin %></td>
      </tr>
      <tr>
        <td><%= f.radio_button(:utype, "member") %></td>
        <td><%= f.label :Member %></td>
      </tr>
      <% end %>

      <tr>
        <td><%= f.submit 'Submit' %></td>
      </tr>
    </table>
<% end %>
