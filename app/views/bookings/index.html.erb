<%= stylesheet_link_tag 'bookings/tables' %>
<%if flash[:notice]%>
    <p id="notice"><%= flash[:notice] %></p>
<%end%>

<h1>Bookings</h1>
<% unless @bookings.nil? %>
    <table style='text-align:center;vertical-align:middle;border-style: ridge;'>
      <thead style='font-size: 25px;font-weight: bold;background-color: #333333;color:#FFFFFF;font-weight: bold;'>
      <tr>
        <th>Username</th>
        <th>Room Number</th>
        <th>Building</th>
        <th>Date of Booking</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th colspan="3"></th>
      </tr>
      </thead>

  <% @bookings.each do |booking| %>

  <tbody style="background-color:#F7F7F7">
      <tr>
        <%unless booking.user.nil? %>
          <td><%= booking.user.uname %></td>
        <%else%>
          <td><%=  %></td>
        <%end%>
        <%unless booking.room.nil? %>
            <td><%= booking.room.rnumber %></td>
        <%else%>
            <td><%=  %></td>
        <%end%>
        <%unless booking.room.building.nil? %>
            <td><%= booking.room.building.bname %></td>
        <%else%>
            <td><%=  %></td>
        <%end%>
        <td><%= booking.timefrom.strftime("%d-%b-%y") %></td>
        <td><%= booking.timefrom.strftime("%I:%M %p") %></td>
        <td><%= booking.timeto.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Delete', bookings_destroy_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<i>No Bookings are made yet</i>
<% end %>
<br>

<%= link_to 'New Booking', add_booking_path %><br/><br/>
<%= link_to 'Back to Dashboard', options_path %>