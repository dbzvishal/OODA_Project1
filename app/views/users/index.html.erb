<%= stylesheet_link_tag 'bookings/tables' %>
<% if flash[:notice]%>
    <p id="notice"><%= flash[:notice] %></p>
<%end%>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Uname</th>
      <th>Uemail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.uname %></td>
        <td><%= user.uemail %></td>
        <td><%= link_to 'Show Booking History', show_booking_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', users_destroy_path(user.id), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New User', add_user_path, method: :get %><br/>
<%= button_to 'Go Back', options_path, method: :get %>
