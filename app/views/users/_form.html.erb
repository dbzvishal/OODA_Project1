<%= form_for user, :url => {:action => 'create'} do |f| %>
    <table>
      <tr>
        <td><%= f.label :Username %></td>
        <td><%= f.text_field :uname %></td>
      </tr>

      <tr>
        <td><%= f.label :Email %></td>
        <td><%= f.email_field :uemail %></td>
      </tr>

      <tr>
        <td><%= f.label :Password %></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <td><%= f.submit 'Submit' %></td>
      </tr>
    </table>
<% end %>
