<!DOCTYPE html>
<html>
  <head>
    <title>Library Room Booking</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "application" %>
    <%= yield(:header) if content_for? :header %>
    <% unless session[:user_id].nil? %>
      <h3 id='logout' name='logout' style="text-align: right; color: blue">
        <%= link_to 'Logout', logout_path %>
      </h3>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
</script>